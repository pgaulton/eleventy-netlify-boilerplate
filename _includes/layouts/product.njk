---
layout: layouts/base.njk
section: product
---

<section class="page-banner d-flex align-items-center text-center">
  <div class="container wow fadeInUp" data-wow-delay="0.2s">
    <h1>{{ title }}</h1>
    {% include "components/breadcrumb.njk" %}
  </div>
</section>

<section class="page-section">
  <div class="container">

    {% if productImage1 or productTitle or layoutContent %}
    <div class="row pb-md-5">
      <div class="col-lg-5 wow fadeInLeft">
        {% if productImage1 %}
        <img src="{{ productImage1 }}" alt="TODO" />
        {% endif %}
      </div>
      <div class="col-lg-7 wow fadeInUp">
        <div class="px-lg-5 pt-4">
          <h3 class="subtitle">{{ productSubtitle }}</h3>
          <h2 class="mb-5">{{ productTitle }}</h2>
          <div class="text-large">
            {{ layoutContent | safe }}
          </div>
        </div>
      </div>
    </div>
    {% endif %}

    <div class="px-lg-5 text-large wow fadeInUp">
      {% markdown productContent2 %}
    </div>

    {% if productImage2 %}
    <div class="px-lg-5 text-center wow fadeInUp">
      <img src="{{ productImage2 }}" alt="TODO" class="pb-5" />
    </div>
    {% endif %}

    <div class="px-lg-5 wow fadeInUp">
      {% markdown productContent3 %}
    </div>
  </div>
</section>

<section class="section-blue call-to-action text-center">
  <div class="container wow fadeInUp">
    <h2 class="pb-2">Interested in a demo?</h2>
    <a href="/contact.html" class="btn btn-rounded btn-lg btn-light shadow">
      Get in touch
    </a>
  </div>
</section>
