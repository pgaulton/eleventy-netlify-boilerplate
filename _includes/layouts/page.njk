---
layout: layouts/base.njk
section: page
---
{% include 'components/page-banner.njk' %}

<section class="page-section">
  <div class="container">
    <div class="row">
      <div class="col wow fadeInUp">
        {{ layoutContent | safe }}
      </div>
      {% if pageImage %}
      <div class="col-lg-4 offset-lg-1 pb-5 pb-lg-0 text-center wow fadeInRight">
        <img src="{{ pageImage | url }}" alt="Page image" />
      </div>
      {% endif %}
    </div>

    <div class="row">
      <div class="col-lg-11 wow fadeInUp pb-5">
        {% markdown pageContent2 %}
      </div>
    </div>
  </div>
</section>
