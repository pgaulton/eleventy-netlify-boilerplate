---
layout: layouts/base.njk
section: homepage
---
<section class="banner section-blue">
  <div class="container text-center">

    <div class="banner-one">        
      <h2 class="banner-title">
        {{ bannerTitle }}
      </h2>

      {% markdown bannerBody %}

      {% if bannerLinkTitle %}
      <div>
        <a class="btn btn-rounded btn-outline-light" href="{{ bannerLinkUrl }}">
          {{ bannerLinkTitle }}
        </a>
      </div>
      {% endif %}
    </div>

    {% if bannerImage %}
    <div>
      <img src="{{ bannerImage | url }}" alt="mockup" />
    </div>
    {% endif %}

  </div>
</section>

<section class="section-products">
  <div class="container pb-5">
    <div class="text-center">
      <h3 class="subtitle">
        {{ productsSubtitle }}
      </h3>

      <h2 class="mb-5">
        {{ productsTitle }}
      </h2>
    </div>

    <div class="row">
      {% if product1Image or product1Title or product1Description or product1LinkUrl %}
      <div class="col-lg-4 mb-4 mb-lg-0">
        <div class="card h-100">
          <div class="card-body">
            {% if product1Image %}
            <div class="row">
              <div class="col-10 col-sm-8 col-md-6 col-lg-12">
                <img src="{{ product1Image | url }}" class="pb-5 w-75" alt="{{ product1Title }}" />
              </div>
            </div>
            {% endif %}
            <h4 class="card-title">{{ product1Title }}</h4>
            <div class="card-text">
              {% markdown product1Description %}
            </div>
            <a href="{{ product1LinkUrl | url }}" class="btn btn-link text-muted">
              <i class="fas fa-arrow-right fa-2x"></i>
            </a>
          </div>
        </div>
      </div>
      {% endif %}
      {% if product2Image or product2Title or product2Description or product2LinkUrl %}
      <div class="col-lg-4 mb-4 mb-lg-0">
        <div class="card h-100">
          <div class="card-body">
            {% if product2Image %}
            <div class="row">
              <div class="col-10 col-sm-8 col-md-6 col-lg-12">
                <img src="{{ product2Image | url }}" class="pb-5 w-75" alt="{{ product2Title }}" />
              </div>
            </div>
            {% endif %}
            <h4 class="card-title">{{ product2Title }}</h4>
            <div class="card-text">
              {% markdown product2Description %}
            </div>
            <a href="{{ product2LinkUrl | url }}" class="btn btn-link text-muted">
              <i class="fas fa-arrow-right fa-2x"></i>
            </a>
          </div>
        </div>
      </div>
      {% endif %}
      {% if product3Image or product3Title or product3Description or product3LinkUrl %}
      <div class="col-lg-4 mb-4 mb-lg-0">
        <div class="card h-100">
          <div class="card-body">
            {% if product3Image %}
            <div class="row">
              <div class="col-10 col-sm-8 col-md-6 col-lg-12">
                <img src="{{ product3Image | url }}" class="pb-5 w-75" alt="{{ product3Title }}" />
              </div>
            </div>
            {% endif %}
            <h4 class="card-title">{{ product3Title }}</h4>
            <div class="card-text">
              {% markdown product3Description %}
            </div>
            <a href="{{ product3LinkUrl | url }}" class="btn btn-link text-muted">
              <i class="fas fa-arrow-right fa-2x"></i>
            </a>
          </div>
        </div>
      </div>
      {% endif %}
    </div>

  </div>
</section>

