<section class="section-blue call-to-action text-center text-lg-left">
  <div class="container">
    <div class="row align-items-center justify-content-between text-white">
      <div class="col-lg-7 pb-4">
        <h2 class="mb-3">{{ section2Title }}</h2>
        {% markdown section2Body %}
      </div>
      <div class="col-lg-5 text-lg-right">
        {% if section2LinkTitle %}
