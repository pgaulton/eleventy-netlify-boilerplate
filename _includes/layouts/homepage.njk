---
layout: layouts/base.njk
section: homepage
---
<section class="banner section-blue">
  <div class="container text-center">

    <div class="banner-one">        
      <h2 class="banner-title">
        {{ bannerTitle }}
      </h2>

      <p>{{ bannerBody }}</p>

      <div>
        <a class="btn btn-rounded btn-outline-light" href="{{ bannerLinkUrl }}">
          {{ bannerLinkTitle }}
        </a>
      </div>
    </div>

    <div>
      <img src="{{ bannerImage }}" alt="mockup" class="shadow-lg rounded" />
    </div>

  </div>
</section>

<section class="section-one">
  <div class="container pb-5">
    <div class="text-center">
      <h3 class="subtitle">
        {{ productsSubtitle }}
      </h3>

      <h2 class="mb-5">
        {{ productsTitle }}
      </h2>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card py-2">
          <div class="card-body">
            <img src="{{ product1Image }}" class="pb-5 w-75" alt="{{ product1Title }}" />
            <h4 class="card-title">{{ product1Title }}</h4>
            <div class="card-text">
              <p>{{ product1Description }}</p>
            </div>
            <a href="{{ product1LinkUrl }}" class="btn btn-link text-muted">
              <i class="fas fa-arrow-right fa-2x"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card py-2">
          <div class="card-body">
            <img src="{{ product2Image }}" class="pb-5 w-75" alt="{{ product2Title }}" />
            <h4 class="card-title">{{ product2Title }}</h4>
            <div class="card-text">
              <p>{{ product2Description }}</p>
            </div>
            <a href="{{ product2LinkUrl }}" class="btn btn-link text-muted">
              <i class="fas fa-arrow-right fa-2x"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card py-2">
          <div class="card-body">
            <img src="{{ product3Image }}" class="pb-5 w-75" alt="{{ product3Title }}" />
            <h4 class="card-title">{{ product3Title }}</h4>
            <div class="card-text">
              <p>{{ product3Description }}</p>
            </div>
            <a href="{{ product3LinkUrl }}" class="btn btn-link text-muted">
              <i class="fas fa-arrow-right fa-2x"></i>
            </a>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<section>
  <div class="container pb-5">
    <h5 class="my-5 text-center">{{ companiesTitle }}</h5>

    <!-- @todo: replace swiper -->
    <div class="swiper-container" id="logo-carousel" data-perpage="6" data-breakpoints='{"1024": {"slidesPerView": 4}, "768": {"slidesPerView": 4}, "620": {"slidesPerView": 3}}'>
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/1.png" alt="Chevron"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/2.png" alt="ExxonMobil"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/3.png" alt="BP"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/4.png" alt="andeavor"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/5.png" alt="Marathon"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/6.png" alt="Amspec"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/7.png" alt="Inspectorate"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/8.png" alt="intertek"></div>
        </div>
        <div class="swiper-slide">
          <div class="brand-logo"><img src="/_includes/assets/img/brand/9.png" alt="SGS"></div>
        </div>
      </div>
    </div>

  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <h3 class="section-title mb-4">{{ section1Title }}</h3>
        {{ section1Body }}
      </div>
      <div class="col-lg-6"></div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="text-center my-5">
      <h2>{{ technologiesTitle }}</h2>
    </div>
    <div class="row mb-5">
      <div class="col-lg-4 col-md-6 mb-5">
        <img src="{{ technology1Image }}" class="pb-4" alt="{{ technology1Title }}" />
        <h5 class="card-title mb-3">{{ technology1Title }}</h5>
        <div class="card-text">
          <p>{{ technology1Description }}</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-5">
        <img src="{{ technology2Image }}" class="pb-4" alt="{{ technology2Title }}" />
        <h5 class="card-title mb-3">{{ technology2Title }}</h5>
        <div class="card-text">
          <p>{{ technology2Description }}</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-5">
        <img src="{{ technology3Image }}" class="pb-4" alt="{{ technology3Title }}" />
        <h5 class="card-title mb-3">{{ technology3Title }}</h5>
        <div class="card-text">
          <p>{{ technology3Description }}</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-5">
