<section class="homepage-section-one mt-3 mt-md-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mt-md-5 mb-5 mt-lg-0">
        <h3 class="section-title py-4 pt-lg-0">{{ section1Title }}</h3>
        {% markdown section1Body %}
      </div>
      <div class="homepage-section1-images col-lg-6">
        {% if section1Image1 %}
        <img src="{{ section1Image1 | url }}" class="" alt="todo" />
        {% endif %}
        {% if section1Image2 %}
        <img src="{{ section1Image2 | url }}" class="" alt="todo" />
