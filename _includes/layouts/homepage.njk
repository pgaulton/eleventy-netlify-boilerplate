        <div class="card-text">
          <p>{{ technology5Description }}</p>
        </div>
      </div>
      <div class="col-lg-4 col-md-6 mb-5">
        <img src="{{ technology6Image }}" class="pb-4" alt="{{ technology6Title }}" />
        <h5 class="card-title mb-3">{{ technology6Title }}</h5>
        <div class="card-text">
          <p>{{ technology6Description }}</p>
        </div>
      </div>

    </div>
  </div>
</section>

<section class="section-blue call-to-action">
  <div class="container">
    <div class="row align-items-center justify-content-between text-white">
      <div class="col-lg-7">
        <h2 class="mb-3">{{ section2Title }}</h2>
        <h4>{{ section2Body }}</h4>
      </div>
      <div class="col-lg-5 text-right">
        <a href="{{ section2LinkUrl }}" class="btn btn-rounded btn-lg btn-light shadow">
          {{ section2LinkTitle }}
        </a>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container py-5">
    <div class="text-center my-5">
