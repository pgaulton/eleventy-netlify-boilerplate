{% set breadcrumbItems = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb justify-content-center">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    {%- for crumb in breadcrumbItems %}
    <li class="breadcrumb-item">
      {% if crumb.hidden %}
      {{ crumb.key }}
      {% else %}
      <a href="{{ crumb.url | url }}">
        {{ crumb.key }}
      </a>
      {% endif %}
    </li>
    {%- endfor %}
    {% if tags %}
    <li class="breadcrumb-item">
      Blog
    </li>
    {% endif %}
    <li class="breadcrumb-item active" aria-current="page">{{ eleventyNavigation.key or title }}</li>
  </ol>
</nav>
