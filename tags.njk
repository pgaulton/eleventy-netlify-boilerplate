---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "Tagged “{{ tag }}”"
---
{% set title = 'Tagged “' + tag + '”' %}
{% set tags = true %}
<section class="page-banner d-flex align-items-center text-center">
  <div class="container wow fadeInUp" data-wow-delay="0.2s">
    <h1>Tagged: "{{ tag }}"</h1>
    {% include "components/breadcrumb.njk" %}
  </div>
</section>

<section class="page-section">
  <div class="container">
    {{ layoutContent | safe }}

    {% set postslist = collections[tag] %}
    {% include "components/postslist.njk" %}
  </div>
</section>
